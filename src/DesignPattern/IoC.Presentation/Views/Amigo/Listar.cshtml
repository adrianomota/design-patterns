@model IEnumerable<IoC.Presentation.ViewModel.AmigoViewModel>
@{
    ViewBag.Title = "Listar";
}

<h2>Listar</h2>

<table class="table table-hover table-striped">
    <tr>
        <td>Identificador</td>
        <td>Nome</td>
        <td>Email</td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Nome</td>
            <td>@item.Email</td>
        </tr>
    }
</table>